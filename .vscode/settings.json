{
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.enabled": false,
  "update.mode": "manual",

  "window.commandCenter": false,

  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.startupEditor": "none",
  "workbench.editor.decorations.badges": false,
  "workbench.editor.showIcons": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.iconTheme": null,

  "breadcrumbs.enabled": false,

  "outline.collapseItems": "alwaysCollapse",

  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', 'Source Code Pro', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,

  "editor.dragAndDrop": false,
  "editor.autoIndent": "advanced",
  "editor.renderWhitespace": "boundary",
  "editor.bracketPairColorization.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.scrollbar.horizontalScrollbarSize": 4,
  "editor.minimap.enabled": false,
  "editor.folding": false,
  "editor.overviewRulerBorder": false,
  "editor.lightbulb.enabled": false,

  "editor.suggest.preview": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggestOnTriggerCharacters": false,
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": false,
  "editor.find.autoFindInSelection": "multiline",
  "editor.quickSuggestions": {
    "comments": "on"
  },

  "files.trimTrailingWhitespace": true,
  "zenMode.hideLineNumbers": false,

  "explorer.openEditors.visible": 0,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "search.useIgnoreFiles": true,

  "git.showProgress": false,
  "git.openRepositoryInParentFolders": "always",

  "scm.diffDecorationsIgnoreTrimWhitespace": "true",
  "scm.diffDecorationsGutterWidth": 1,
  "scm.diffDecorationsGutterPattern": {
    "added": true
  },

  "extensions.ignoreRecommendations": true,

  "javascript.suggest.autoImports": false,
  "javascript.updateImportsOnFileMove.enabled": "never",

  "markdown.marp.enableHtml": true,
  "markdown.marp.exportType": "html",

  "alignment.surroundSpace": {
    "colon": [-1, 1]
  },

  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.enabled": false
}
